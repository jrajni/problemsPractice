#include<iostream>
using namespace std;
int main (void)
{
    int n,j=0,count=0;
    cin>>n;
    int a[n],b[n];
    for(int i=0;i<n;i++)cin>>a[i];
    for(int i=0;i<n;i++)
    {
        if (a[(i-1+n)%n] > a[i])
      {
            count++;
}    }
    if(count>0) cout<<"yes";
    else cout<<"no";

    return 0;
}
